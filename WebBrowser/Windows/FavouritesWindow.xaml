<Window x:Class="WebBrowser.Windows.FavouritesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebBrowser.Windows"
                xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        Title="FavouritesWindow" Height="225" Width="336"
                ui:WindowHelper.UseModernWindowStyle="True" ResizeMode="NoResize">
    <ui:SimpleStackPanel>
        <ListBox Margin="0,0,206,-209" x:Name="FavListBox" ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ListBoxItem Content="Fav1" x:Name="Fav1InList" Selected="Fav1InList_Selected"/>
        </ListBox>
        <Button x:Name="ShowSelFav" Click="ShowSelFav_Click" Content="Show selected favourite" Height="32" Width="191" Margin="135,0,0,0" VerticalAlignment="Top"/>
        <Button x:Name="OpenSelFav" Click="OpenSelFav_Click" Content="Open selected favourite" Height="32" Width="191" Margin="135,5,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="32" TextWrapping="Wrap" Text="FavAdressBox" x:Name="FavAdressBox" VerticalAlignment="Top" Width="191" Margin="135,4,0,0"/>
    </ui:SimpleStackPanel>

</Window>
